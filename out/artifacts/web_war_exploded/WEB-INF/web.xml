<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <display-name>demo</display-name>
    <welcome-file-list>
        <welcome-file>/index</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>testIndirect</servlet-name>
        <jsp-file>/WEB-INF/testIndirect.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>testIndirect</servlet-name>
        <url-pattern>/testIndirect</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Formateur</servlet-name>
        <jsp-file>/WEB-INF/connSucces.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Formateur</servlet-name>
        <url-pattern>/formateur</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Erreur</servlet-name>
        <jsp-file>/WEB-INF/ErrorPages.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Erreur</servlet-name>
        <url-pattern>/erreur</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/WEB-INF/index.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <jsp-file>/WEB-INF/adminPage.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/adminPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createAccount</servlet-name>
        <jsp-file>/WEB-INF/createAccount.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>createAccount</servlet-name>
        <url-pattern>/createAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logs</servlet-name>
        <jsp-file>/WEB-INF/logs.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>logs</servlet-name>
        <url-pattern>/logs</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
</web-app>
